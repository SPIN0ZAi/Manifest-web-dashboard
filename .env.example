# Discord Bot Configuration
# Your Discord bot token from Discord Developer Portal
DISCORD_TOKEN=your_discord_bot_token_here
# Your Discord application client ID from Discord Developer Portal
DISCORD_CLIENT_ID=your_discord_client_id_here

# Bot Owner Configuration
# Your Discord user ID (right-click your profile -> Copy User ID)
BOT_OWNER_ID=your_discord_user_id_here

# MongoDB Configuration
# Full MongoDB connection URI including username and password
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp&tls=true
# Name of the database to use
MONGODB_DB_NAME=gamefilesdb

# GitHub Configuration - Main Repository (Read Access)
# GitHub personal access token with read permissions
GITHUB_TOKEN=ghp_your_github_token_here
# Repository owner username 
GITHUB_REPO_OWNER=your_github_username
# Repository name for game files 
GITHUB_REPO_NAME=your_repo_name

# GitHub Configuration - Upload Repository (Write Access)
# GitHub personal access token with write permissions for uploading files
GITHUB_UPLOAD_TOKEN=ghp_your_upload_token_here
# Repository name for uploading files 
GITHUB_UPLOAD_REPO_NAME=your_upload_repo_name

# Server Configuration
# Whitelist of allowed Discord server IDs (comma-separated)
ALLOWED_SERVER_IDS=server_id_1,server_id_2
# Safe Guild ID (where all commands including sensitive ones are available)
SAFE_GUILD_ID=your_safe_guild_id
# Main Guild ID
MAIN_GUILD_ID=your_main_guild_id
# Exception Guild ID (full user commands but not admin commands)
EXCEPTION_GUILD_ID=your_exception_guild_id

# API Server Configuration
API_PORT=3000
API_BIND_PORT=6308
API_BIND_ADDR=0.0.0.0
API_PRIMARY_URL=http://your-primary-server-ip:6308
API_BACKUP_URL=http://your-backup-server-ip:6380

# File Upload Service (Optional)
# GoFile.io API token for large file uploads
GOFILE_TOKEN=your_gofile_token

# Debug Configuration (Optional)
# Set to 'true' to enable debug logging
DEBUG=false

# Language Configuration (Optional)
# Default language for the bot (default: en)
DEFAULT_LANGUAGE=en